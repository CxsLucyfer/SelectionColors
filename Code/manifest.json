{

	"manifest_version": 2,
	"name": "Selection Colors",
	"short_name": "Selection Colors",
	"description": "Change the font color and background color of selected text.",
	"author": "Robby Bennett",
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"version": "2.1",
	"options_page": "options.html",
	"browser_action": {
		"default_icon": "icon128.png"
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"applyColors.js"
			]
		}
	],
	"background": {
		"scripts": [
			"background.js"
		]
	}
}
